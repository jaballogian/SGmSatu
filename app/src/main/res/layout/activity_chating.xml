<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatingActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/namaPengirimTextViewChatingActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nama"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_below="@+id/namaPengirimTextViewChatingActivity"
        android:id="@+id/pesanLinearLayoutChatingActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/isiPesanTextViewChatingActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Isi Pesan"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/masukanPesanLinearLayoutChatingActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Tulis pesan di sini"
            android:layout_margin="5dp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_add_circle_red_24dp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_send_red_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>