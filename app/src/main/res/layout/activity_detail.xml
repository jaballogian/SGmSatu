<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sgm"/>

            <SearchView
                android:id="@+id/searchSearchViewDetailActivity"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </SearchView>

            <ImageButton
                android:id="@+id/shop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_shopping_cart_black_24dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambarImageViewDetailActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:src="@drawable/sgm" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/judulTextViewDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dummy lorem itsum"/>

                <TextView
                    android:id="@+id/hargaTextViewDetailActivity"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/rasaTextViewDetailActivity"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Jumlah : "
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_white_button">

                        <Button
                            android:id="@+id/kurangButtonDetailActivity"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:background="#00000000"
                            android:textColor="@color/colorPrimaryDark"/>

                        <EditText
                            android:id="@+id/jumlahEditTextDetailActivity"
                            android:layout_width="40dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:text="0" />

                        <Button
                            android:id="@+id/tambahButtonDetailActivity"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:background="#00000000"
                            android:textColor="@color/colorPrimaryDark"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/tambahKeTroliButtonDetailActivity"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Tambah ke troli"
                        android:textSize="11dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_white_button"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingHorizontal="10dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:id="@+id/beliProductButtonDetailActivity"
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Beli Product"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_red_button"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10dp"
                        android:textAllCaps="false"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deskripsiTextViewDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>